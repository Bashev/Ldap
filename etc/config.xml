<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <magenerds_ldap>
            <server>
                <use_tls>0</use_tls>
                <use_ssl>0</use_ssl>
                <bind_requires_dn>0</bind_requires_dn>
                <allow_empty_password>0</allow_empty_password>
                <user_filter><![CDATA[(&(objectClass=*)(uid=%s))]]></user_filter>
            </server>
            <attribute>
                <username>uid</username>
                <first_name>givenname</first_name>
                <last_name>sn</last_name>
                <email>mail</email>
            </attribute>
        </magenerds_ldap>
    </default>
</config>
